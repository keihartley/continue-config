{
  "name": "continue-config",
  "version": "0.9.9",
  "description": "Custom Continue.dev Configuration",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint . --ext .ts,.js",
    "lint:check": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "validate:config": "node scripts/validate-config.cjs",
    "validate": "npm run format:check && npm run lint:check && npm run validate:config && npm run build",
    "check": "npm run validate",
    "fix": "npm run format:write && npm run lint:fix",
    "clean": "rimraf out/",
    "prebuild": "npm run clean",
    "prepare": "husky"
  },
  "main": "out/config.js",
  "lint-staged": {
    "**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,yaml,yml,md}": "prettier --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.2.0",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2",
    "yaml": "^2.5.1"
  },
  "keywords": [
    "continue",
    "ai",
    "code-assistant",
    "configuration"
  ],
  "author": "Cliff",
  "license": "MIT"
}
